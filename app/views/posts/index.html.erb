<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- ヘッダー部分 -->
      <div class="text-center mb-4">
        <div class="title-wrapper">
            <h1 class="display-4 fw-bold">
            だれかの見つけた<span class="text-red">秋</span>
            </h1>
        </div>
      </div>
      <%= render 'shared/flash_messages' %>
      <!-- 投稿一覧 -->
      <% if @posts.any? %>
        <div class="posts-container">
          <% @posts.each_with_index do |post, index| %>
            <div class="card mb-3 shadow-sm custom-card">
              <div class="card-body">
                <div class="card-text">
                <%= simple_format(post.content) %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- 新規投稿リンク -->
        <div class="text-center mt-5 mb-4">
          <%= link_to "自分も知らせに行く", new_post_path, class: "btn btn-deepgreen btn-lg w-50", data: { turbo: false } %>
        </div>
        <!-- ページ更新ボタン -->
        <div class="text-center mb-">
          <%= link_to "ほかの秋も見る", posts_path, class: "btn btn-white-outline btn-lg w-50", data: { turbo_method: :get } %>
        </div>
      <% else %>
        <!-- 投稿がない場合 -->
        <div class="text-center">
          <div class="card border-0">
            <div class="card-body">
              <h5 class="card-title text-muted">まだ投稿がありません</h5>
              <p class="card-text">最初の投稿をしてみましょう！</p>
              <%= link_to "投稿する", new_post_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>